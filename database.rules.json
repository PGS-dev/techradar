{
  "rules": {
    ".read":  false,
    ".write": false,

    "radars": {
      // Read all radars data
      ".read":  true,

      "$radar_id": {
        // Write if user is authenticated and is also an author of current radar OR if creating new radar
        ".write": "auth != null && (auth.uid == root.child('radars').child($radar_id).child('author').val()) || (!data.exists() && newData.exists())"
      }
    },
    "snapshots": {
      // Read all snapshots data
      ".read":  true,

      "$radar_id": {
        // Write if user is authenticated and is also an author of current radar OR if creating new radar
        ".write": "auth != null && (auth.uid == root.child('radars').child($radar_id).child('author').val()) || (!data.exists() && newData.exists())"
      }
    },
    "technologies": {
      // Read all snapshots data
      ".read":  true,

      "$radar_id": {
        // Write if user is authenticated and is also an author of current radar OR if creating new radar
        ".write": "auth != null && (auth.uid == root.child('radars').child($radar_id).child('author').val()) || (!data.exists() && newData.exists())"
      }
    },
    "users": {
      "$uid": {
        // Read & write only current user data
        ".read": "auth != null && auth.uid == $uid || !root.child('users').child($uid).exists()",
        ".write": "auth != null && auth.uid == $uid || (!data.exists() && newData.exists())"
      }
    }
  }
}
